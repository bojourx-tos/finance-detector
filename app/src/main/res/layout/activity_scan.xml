<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Terminal Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/glass_card"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="8dp">

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ’€"
                android:textSize="28sp"
                android:gravity="center"
                android:layout_marginEnd="15dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESTRUCTION TERMINAL"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real-time Operation Monitor"
                    android:textSize="12sp"
                    android:textColor="#B0BEC5"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Status Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="25dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp">

            <!-- Operation Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#20000000"
                android:padding="15dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STATUS:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="[INITIALIZING] Preparing destruction sequence..."
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#00FF00"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- Risk Meter -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#15FF4500"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="THREAT LEVEL ASSESSMENT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFD700"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/riskScoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0/100"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#FF4500"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DANGER COEFFICIENT"
                    android:textSize="12sp"
                    android:textColor="#B0BEC5"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

        <!-- Terminal Output -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="25dp"
            android:layout_marginBottom="20dp"
            android:elevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="ðŸ“Ÿ"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:background="#30FF6B35"
                    android:layout_marginEnd="15dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="OPERATION LOG"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="#10000000"
                android:padding="15dp">

                <ListView
                    android:id="@+id/appsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="2dp"
                    android:scrollbars="vertical"
                    android:fontFamily="monospace"
                    android:textColor="#00FF00" />

            </LinearLayout>

        </LinearLayout>

        <!-- Control Panel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <!-- Primary Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="[EXPORT] REPORT"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/neon_button"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:layout_marginEnd="10dp"
                    android:elevation="6dp" />

                <Button
                    android:id="@+id/scanAgainButton"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:text="[RESTART] SCAN"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/neon_button"
                    android:textColor="#FFFFFF"
                    android:fontFamily="monospace"
                    android:layout_marginStart="10dp"
                    android:elevation="6dp" />

            </LinearLayout>

            <!-- Nuclear Option -->
            <Button
                android:id="@+id/uninstallButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="[EXECUTE] NUCLEAR ANNIHILATION PROTOCOL"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/danger_neon"
                android:textColor="#FFFFFF"
                android:fontFamily="monospace"
                android:elevation="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- System Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="15dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[CLASSIFIED] Finance Destroyer v2.0 - Professional Destruction Suite"
                android:textSize="11sp"
                android:textColor="#B0BEC5"
                android:textAlignment="center"
                android:fontFamily="monospace" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
